<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.tetrisgame.controllers.MainMenuController"
      alignment="CENTER" spacing="20"
            stylesheets="@css/menu.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="TETRIS" style="-fx-font-size: 48px; -fx-text-fill: #ff5555; -fx-font-weight: bold;" />
    
    <!-- Boutons principaux -->
    <Button fx:id="startButton" text="Start Game" prefWidth="200" style="-fx-font-size: 18px;"/>
    <Button fx:id="settingsButton" text="Settings" prefWidth="200" style="-fx-font-size: 18px;"/>
    <Button fx:id="quitButton" text="Quit" prefWidth="200" style="-fx-font-size: 18px;"/>
</VBox>