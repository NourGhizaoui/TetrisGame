<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>


<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.tetrisgame.controllers.Controller">

    <!-- Zone de jeu -->
    <center>
        <StackPane>
            <Canvas fx:id="gameCanvas" width="300" height="600"/>
        </StackPane>
    </center>

    <!-- HUD -->
    <top>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            
            
                <Button fx:id="pauseButton" text="pause" prefWidth="200" style="-fx-font-size: 18px;" onAction="#handlePause"/>

            <Label fx:id="scoreLabel" text="Score: 0" style="-fx-text-fill: red -fx-font-size: 16px;"/>
            <Label fx:id="gameOverLabel" text="" style="-fx-text-fill: red; -fx-font-size: 20px;"/>
        </VBox>
    </top>

</BorderPane>


