<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.mycompany.tetrisgame.controllers.Controller"
            prefWidth="400" prefHeight="600">

    <!-- Zone pour la grille du Tetris -->
    <AnchorPane fx:id="gamePane" layoutX="50" layoutY="50" 
                prefWidth="300" prefHeight="500" style="-fx-background-color: lightgray;"/>

    <!-- Bouton pour dÃ©marrer le jeu -->
    <Button fx:id="startButton" text="Start Game" 
            layoutX="50" layoutY="10" prefWidth="100" prefHeight="30"/>

    <!-- Zone pour afficher le score -->
    <Text fx:id="scoreText" text="Score: 0" layoutX="200" layoutY="30" style="-fx-font-size: 16px;"/>
    
</AnchorPane>
